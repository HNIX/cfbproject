<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :home_team %>
    <%= f.input :home_score %>
    <%= f.input :away_team %>
    <%= f.input :away_score %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
